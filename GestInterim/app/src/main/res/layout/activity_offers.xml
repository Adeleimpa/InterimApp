<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".Offers">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="207dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="410dp"
        android:layout_height="88dp"
        android:layout_marginTop="104dp"
        android:background="@color/light_purple"
        android:fontFamily="sans-serif-black"
        android:paddingStart="60dp"
        android:paddingTop="15dp"
        android:text="My account"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="80dp"
        android:layout_height="76dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="304dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/account_icon" />

    <ImageView
        android:id="@+id/messageOffersImage"
        android:layout_width="65dp"
        android:layout_height="57dp"
        android:layout_marginEnd="316dp"
        android:layout_marginBottom="164dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/message_icon" />

    <ImageView
        android:id="@+id/prefOffersImage"
        android:layout_width="66dp"
        android:layout_height="64dp"
        android:layout_marginEnd="316dp"
        android:layout_marginBottom="352dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/settings_icon" />

    <ImageView
        android:id="@+id/infosOffersImage"
        android:layout_width="82dp"
        android:layout_height="71dp"
        android:layout_marginEnd="304dp"
        android:layout_marginBottom="252dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/info_icon" />

    <ImageView
        android:id="@+id/offersOfferImage"
        android:layout_width="70dp"
        android:layout_height="81dp"
        android:layout_marginEnd="316dp"
        android:layout_marginBottom="428dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/offers_icon" />

    <ImageView
        android:id="@+id/appliOffersImage"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginEnd="304dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/applications_icon" />

    <TextView
        android:id="@+id/messageView"
        android:layout_width="274dp"
        android:layout_height="465dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>