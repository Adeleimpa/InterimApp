    <EditText
        android:id="@+id/MAIL"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="152dp"
        android:layout_marginBottom="240dp"
        android:background="#BD74CA"
        android:backgroundTint="#BD74CA"
        android:ems="10"
