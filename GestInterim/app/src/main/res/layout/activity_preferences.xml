<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".Preferences">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="198dp"
        android:layout_height="57dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="208dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/myAccountView"
        android:layout_width="408dp"
        android:layout_height="71dp"
        android:layout_marginTop="80dp"
        android:background="@color/light_purple"
        android:fontFamily="sans-serif-black"
        android:paddingStart="60dp"
        android:paddingTop="10dp"
        android:text="My account"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="72dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/account_icon" />

    <ImageView
        android:id="@+id/preferencesInfoImage"
        android:layout_width="69dp"
        android:layout_height="62dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="580dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/info_icon" />

    <ImageView
        android:id="@+id/preferencesPreferencesImage"
        android:layout_width="66dp"
        android:layout_height="62dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="188dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings_icon" />

    <ImageView
        android:id="@+id/preferencesMessagesImage"
        android:layout_width="75dp"
        android:layout_height="63dp"
        android:layout_marginEnd="312dp"
        android:layout_marginBottom="384dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/message_icon" />

    <ImageView
        android:id="@+id/preferencesOffersImage"
        android:layout_width="73dp"
        android:layout_height="69dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="380dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/offers_icon" />

    <ImageView
        android:id="@+id/preferencesAppliImage"
        android:layout_width="79dp"
        android:layout_height="69dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="480dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/applications_icon" />

    <TextView
        android:id="@+id/preferencesView"
        android:layout_width="290dp"
        android:layout_height="476dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="188dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>