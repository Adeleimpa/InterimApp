<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".Messages">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="214dp"
        android:layout_height="87dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="413dp"
        android:layout_height="84dp"
        android:layout_marginTop="116dp"
        android:background="@color/light_purple"
        android:fontFamily="sans-serif-black"
        android:paddingStart="60dp"
        android:paddingTop="15dp"
        android:text="My account"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="88dp"
        android:layout_height="81dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="292dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/account_icon" />

    <ImageView
        android:id="@+id/messageMessageImage"
        android:layout_width="75dp"
        android:layout_height="63dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="304dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/message_icon" />

    <ImageView
        android:id="@+id/appliMessageImage"
        android:layout_width="77dp"
        android:layout_height="71dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="328dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/applications_icon" />

    <ImageView
        android:id="@+id/offersMessageImage"
        android:layout_width="72dp"
        android:layout_height="82dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="224dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/offers_icon" />

    <ImageView
        android:id="@+id/prefMessageImage"
        android:layout_width="75dp"
        android:layout_height="87dp"
        android:layout_marginEnd="304dp"
        android:layout_marginBottom="124dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/settings_icon" />

    <ImageView
        android:id="@+id/infosMessageImage"
        android:layout_width="92dp"
        android:layout_height="79dp"
        app:srcCompat="@drawable/info_icon"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="614dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="277dp"
        android:layout_height="434dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="12dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>